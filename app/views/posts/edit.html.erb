<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">編集する</h1>
    <div class="form ">
      <div class="form-body">
        <% @post.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>

        <%= form_with model: @post, local: true do |f| %>
         <%= f.label :content %>
         <%= f.text_area :content %>

          <%= f.submit "変更する" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
