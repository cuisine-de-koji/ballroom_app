<div class="main users-new">
  <div class="container">
    <div class="form-heading">ログイン</div>
    <div class="form users-form">
      <div class="form-body">

        <%= form_with scope: :session, url: login_path, local: true do |f| %>
          <%= f.label :email %>
          <%= f.email_field :email %>

          <%= f.label :password %>
          <%= f.password_field :password %>

          <%= f.submit "ログインする" %>
        <% end %>
        <p>New user? <strong><%= link_to "Sign up now!", signup_path %></strong></p>
      </div>
    </div>
  </div>
</div>
